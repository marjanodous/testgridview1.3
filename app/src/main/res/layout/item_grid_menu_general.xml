<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/item_grid_menu_general"
        android:layout_margin="16dp"
        android:layout_alignParentLeft="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_item_menu"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:background="@drawable/test" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="درس شبکه های اینترنتی"
                android:id="@+id/txt_name_item_menu"
                android:textColor="#000000"
                android:layout_below="@+id/img_item_menu"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:maxLength="15"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مهندسی نرم افزار"
                android:id="@+id/txt_reshte_item_menu"
                android:textColor="#000000"
                android:layout_below="@+id/txt_name_item_menu"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:maxLength="15"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1200"
                android:id="@+id/txt_price_item_menu"
                android:textColor="#000000"
                android:layout_below="@+id/txt_reshte_item_menu"
                android:layout_toRightOf="@id/rial"
                android:textSize="12sp"
                android:maxLength="15"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1200"
                android:id="@+id/rial"
                android:textColor="#000000"
                android:layout_below="@+id/txt_reshte_item_menu"
                android:layout_alignParentLeft="true"
                android:textSize="12sp"
                android:maxLength="15"
                android:layout_margin="5dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>